<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="424dp"
            android:layout_height="725dp"
            android:id="@+id/linearLayout"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/A"
                android:textAlignment="center"
                android:inputType="none"
                android:focusable="false"
                android:hint="A"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/B"
                android:textAlignment="center"
                android:inputType="none"
                android:focusable="false"
                android:hint="B"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/num1">
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button0" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button1" app:layout_columnWeight="1" app:layout_rowWeight="1"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2" app:layout_columnWeight="1"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3" app:layout_columnWeight="1"/>
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button4" app:layout_columnWeight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/num2">
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button5" app:layout_columnWeight="1"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button6" app:layout_columnWeight="1"/>
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button7" app:layout_columnWeight="1"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button8" app:layout_columnWeight="1"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button9"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/num3">
            <Button
                    android:text="숫자1 삭제"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/remove_a" android:layout_weight="1"/>
            <Button
                    android:text="숫자2 삭제"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/remove_b" android:layout_weight="1"/>
        </LinearLayout>
        <Button
                android:text="전체 삭제"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/remove_all"/>
        <Button
                android:text="+"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/plus"/>
        <Button
                android:text="-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/minus"/>
        <Button
                android:text="*"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/mul"/>
        <Button
                android:text="/"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/div"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Res" android:text="계산 결과:"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textAlignment="center"
                android:textColor="@android:color/holo_red_light"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>